page {
    height: 100%;
    min-height: 100%;
    background-color: #fff;
  }
.container {
    height: 100%;
    display: block;
}
.type-container-boxx {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
}
.scroll-view-container {
    width: 25%;
    height: 100%;
    border-right: 1px solid #f5f5f5;
    background-color: #fff;
    display: inline-block;
    float: left;
    overflow: hidden;
    box-sizing: border-box;
}
.type-box:nth-child(1) {
    margin-top: 20rpx;
}
.type-box {
    padding: 5px 0;
    height: 70rpx;
    line-height: 70rpx;
}
.type-navbar-item {
    font-size: 28rpx;
    text-align: center;
    border-left: 2px solid #fff;
}
.list-container {
    width: 75%;
    height: 100%;
    float: left;
    box-sizing: border-box;
    overflow: hidden;
}
.list-container .type-list {
    overflow-y: auto;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    /* padding-right: 10%; */
}
.goods-list{
    overflow: hidden;
    width: 100%;
}
.goods-list .item {
    display: flex;
    position: relative;
    padding: 20px;
    width: 100%;
}
.goods-list .item .image {
    width: 160rpx;
    height: 160rpx;
}
.goods-list .item .image image {
    width: 160rpx;
    height: 160rpx;
}
.goods-list .item .right {
    position: relative;
    width:calc(100% - 160px);
    padding-left: 20px;
    padding-right: 40px;
}
.goods-list .item .right .name {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    margin-bottom: 10px;
}
.text-price::before {
    content: "Â¥";
    font-size: 80%;
    margin-right: 4rpx;
}
.text-price{
    color: #e54d42;
}
.text-gray {
    color: #aaaaaa;
    margin-top: 10px;
}
.text-black {
    color: #333333;
}
.goods-list .item .add {
    position: absolute;
    right: 70rpx;
    bottom: 30rpx;
    width: 50rpx;
    height: 50rpx;
}
.goods-list .item .add image{
    width: 100%;
    height: 100%;
}
.type-item-on {
    border-left: 2px solid #ab2b2b;
    color: #ab2b2b;
    font-size: 30rpx;
  }